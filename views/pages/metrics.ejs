<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' href='/public/css/styles.css'>

    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
</head>

<body>
    <div id='nav' class='p-2'>
        <img id='logo1' src='https://saverlife.earn.org/static/assets/img/essp-pink-logo-white.png' alt='Saver Life'>
    </div>

    <div class="container">
    <h2><%= title %></h2>
    <div id="myDiv"><!-- Plotly chart will be drawn inside this DIV --></div>
    <div id="myDivStacked"><!-- Plotly chart will be drawn inside this DIV --></div>
    <script>
        var data = [{
            x: ['giraffes', 'orangutans', 'monkeys'],
            y: [20, 14, 23],
            type: 'bar'
        }];

        Plotly.newPlot('myDiv', data);

    var trace1 = {
        x: ['2018-08-18', '2018-08-19', '2018-08-20'], 
        y: [20, 14, 23], 
        name: 'Won',
        marker:{
            color: ['rgba(63, 191, 63,1)', 'rgba(63, 191, 63,1)', 'rgba(63, 191, 63,1)']
        },
        type: 'bar'
    };  

    var trace2 = {
    x: ['2018-08-18', '2018-08-19', '2018-08-20'], 
    y: [12, 18, 29], 
    name: 'Lost',
    marker:{
        color: ['rgba(222,45,38,0.8)', 'rgba(222,45,38,0.8)', 'rgba(222,45,38,0.8)']
    },
    type: 'bar'
    };

    var data = [trace1, trace2];
    var layout = {barmode: 'group'};

    Plotly.newPlot('myDivStacked', data, layout);
    </script>
    
    </div> <!-- eof container -->


</body>

</html>
